generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum BlogCategory {
  Sport
  Health
  Food
  Tech
}

enum RoleUser {
  User
  Admin
}

enum StatusOrder {
  Pending
  Canceled
  Paid
}

model User {
  user_id      Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  password     String // jika seperti ini not null
  avatar       String? // jika menggunakan "?" artinya boleh null
  role         RoleUser @default(User)
  loginAttempt Int      @default(0)
  isSuspend    Boolean  @default(false)
  isVerify     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updateAt     DateTime @updatedAt
  Blog         Blog[]
  Order        Order[]
}

model Blog {
  blog_id   String       @id @default(uuid())
  title     String       @unique
  slug      String       @unique
  category  BlogCategory
  content   Json
  thumbnail String
  createdAt DateTime     @default(now())
  updateAt  DateTime     @updatedAt
  user_id   Int
  user      User         @relation(fields: [user_id], references: [user_id])
}

model Order {
  id           Int         @id @default(autoincrement())
  price        Int
  status       StatusOrder @default(Pending)
  redirect_url String?
  createdAt    DateTime    @default(now())
  expiredAt    DateTime
  user_id      Int
  user         User        @relation(fields: [user_id], references: [user_id])
}
